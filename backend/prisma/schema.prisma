generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  type UserType
  name String
  email String @unique
  password String
  hospital String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

